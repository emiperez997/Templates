---
import Timeline from "./Timeline.astro";
---

<section
  class="w-full h-auto md:h-[640px] lg:w-[1024px] xl:w-[1320px] p-10 md:px-28 gap-10 flex justify-center md:justify-between items-center"
>
  <div class="flex flex-col gap-10 w-full lg:w-[500px]">
    <h3 class="text-red-500 text-4xl md:text-5xl font-bold">Connect with me</h3>

    <input
      type="text"
      placeholder="Email"
      class="w-full p-5 bg-dark font-bold text-light focus-within:border-none"
    />
    <input
      type="text"
      placeholder="Message"
      class="w-full p-5 bg-dark font-bold text-light focus:border-none"
    />

    <button class="self-end bg-red-500 hover:bg-red-400 p-4 text-light flex">
      Stay Connected
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
      </svg>
    </button>
  </div>

  <Timeline active={3} />
</section>
