---
import Timeline from "./Timeline.astro";
import { title, description } from "../data/data.json";
---

<section
  class="h-[100vh] mdh-[680px] lg:w-[1024px] xl:w-[1320px] px-10 md:px-28 gap-10 flex justify-between items-center"
>
  <div class="flex flex-col gap-5">
    <h2 class="text-5xl text-white">{title}</h2>
    <p class="text-gray-500">
      {description}
    </p>

    <button class="self-start bg-red-500 hover:bg-red-400 p-4 text-light">
      Creator journey
    </button>
  </div>

  <Timeline active={1} />
</section>
