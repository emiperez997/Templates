---
import Navbar from "../components/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="title" content="I'm a Frontend Developer" />
    <meta
      name="description"
      content="Passionate Frontend sorcerer with a penchant for crafting delightful user experiences."
    />
    <title>{title}</title>
  </head>
  <body class="bg-gray-900">
    <Navbar />
    <slot />
  </body>
</html>
